<!-- Backdrop element -->
<div class="modal-backdrop" id="modalBackdrop" style="display: none;"></div>

<!-- First modal dialog -->
<div class="modal" id="exampleModalToggle1" style="display: none;">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalToggleLabel1">Contact information</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form>
					<div class="row mb-4">
						<div class="col">
							<div>
								<input type="text" id="form6Example1" class="form-control" />
								<label class="form-label hide-label l1" for="form6Example1">Phone number</label>
							</div>
						</div>
						<div class="col">
							<div>
								<input type="text" id="form6Example2" class="form-control" />
								<label class="form-label hide-label l2" for="form6Example2">Deposit</label>
							</div>
						</div>
					</div>

					<div class="mb-4">
						<input type="number" id="typeNumber" class="form-control" />
						<label class="form-label hide-label l3" for="typeNumber">Days</label>
					</div>

					<div class="mb-4">
						<input type="text" id="form6Example4" class="form-control" />
						<label class="form-label hide-label l4" for="form6Example4">Address</label>
					</div>
				</form>

			</div>
			<div class="modal-footer">
				<button class="btn btn-primary btn-sml" id="nextButton1">Next</button>
			</div>
		</div>
	</div>
</div>

<!-- Second modal dialog -->
<div class="modal" id="exampleModalToggle22" style="display: none;">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalToggleLabel22">Payment method</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body" style="height: 119px">
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1" />
					<label class="form-check-label" for="inlineRadio1">BNPL</label>
				</div>

				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2" />
					<label class="form-check-label" for="inlineRadio2">Credit/Debit card</label>
				</div>
			</div>
			<div class="modal-footer">
				<button class="btn btn-primary btn-sml" id="backButton">Back</button>
				<form class="ml-2" asp-controller="Car" asp-action="Rent" asp-route-id="@Model.Id" method="post">
					<button class="btn btn-primary btn-sml" id="finishButton">Finish</button>
				</form>
			</div>
		</div>
	</div>
</div>

<style>
	.modal-backdrop {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent black color */
		z-index: 1040; /* A lower value than the modal to appear below it */
		display: none;
	}


	.modal.fade.show .modal-dialog {
		transform: translateY(0);
	}

	.form-check-input {
		height: 1em;
	}

	.btn-sml {
		padding: 8px 15px;
	}

	.hide-label {
		display: block;
		opacity: 1;
		transition: opacity 0.2s ease-in-out;
		pointer-events: auto;
	}

	.hide-label.hide {
		opacity: 0;
		pointer-events: none;
	}


	.modal-header .btn-close {
		padding: 1rem;
		margin: 1rem;
	}

	.close:hover {
		color: #000;
		text-decoration: none;
		opacity: .75;
	}

	.close {
		box-sizing: content-box;
		width: 1em;
		height: 1em;
		padding: .25em;
		color: #000;
		background: transparent url("data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3E%3Cpath d='M.293.293a1 1 0 011.414 0L8 6.586 14.293.293a1 1 0 111.414 1.414L9.414 8l6.293 6.293a1 1 0 01-1.414 1.414L8 9.414l-6.293 6.293a1 1 0 01-1.414-1.414L6.586 8 .293 1.707a1 1 0 010-1.414z'/%3E%3C/svg%3E") 50%/1em auto no-repeat;
		border: 0;
		border-radius: .25rem;
		opacity: .5;
	}

	.form-label {
		position: absolute;
		top: 0;
		max-width: 90%;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		padding-top: 1.4rem;
		pointer-events: none;
		transform-origin: 0 0;
		transition: all .2s ease-out;
		color: rgba(0,0,0,.6);
		margin-bottom: 0;
		box-sizing: border-box;
	}

	.l1 {
		left: 1.6rem;
	}

	.l2 {
		left: 17.1rem;
	}

	.l3 {
		padding-top: 5.3rem;
		left: 1.6rem;
	}

	.l4 {
		padding-top: 9.1rem;
		left: 1.6rem;
	}
</style>

<script>
	const openFirstModalButton = document.getElementById('openFirstModalButton');
	const nextButton1 = document.getElementById('nextButton1');
	const backButton = document.getElementById('backButton');
	const closeButton1 = document.querySelector('#exampleModalToggle1 .close');
	const closeButton2 = document.querySelector('#exampleModalToggle22 .close');
	const modal1 = document.getElementById('exampleModalToggle1');
	const modal2 = document.getElementById('exampleModalToggle22');
	const modalBackdrop = document.getElementById('modalBackdrop');

	// Function to open the modal and backdrop
	function openModal(modal) {
		modal.style.display = 'block';
		modalBackdrop.style.display = 'block';
	}

	// Function to close the modal and backdrop
	function closeModal(modal) {
		modal.style.display = 'none';
		modalBackdrop.style.display = 'none';
	}

	// Event listener for button click to open first modal
	openFirstModalButton.addEventListener('click', () => {
		openModal(modal1);
	});

	// Event listener for button click to open second modal from the first modal
	nextButton1.addEventListener('click', () => {
		closeModal(modal1);
		openModal(modal2);
	});

	// Event listener for button click to go back from the second modal to the first modal
	backButton.addEventListener('click', () => {
		closeModal(modal2);
		openModal(modal1);
	});

	// Event listener for button click to close the first modal
	closeButton1.addEventListener('click', () => {
		closeModal(modal1);
	});

	// Event listener for button click to close the second modal
	closeButton2.addEventListener('click', () => {
		closeModal(modal2);
	});
</script>
