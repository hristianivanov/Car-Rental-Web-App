@using static CarRentalSystem.Common.GeneralApplicationConstants;

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<title>@ViewData["Title"] - Car Rental System</title>

	<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
	<link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
	<link
		href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
		rel="stylesheet" />

	<link href="~/css/styles.css" rel="stylesheet" />
	<style>
		body {
			display: flex;
			flex-direction: column;
			min-height: 100vh;
			margin: 0;
			padding: 0;
		}

		.page-content {
			flex-grow: 1;
			padding-top: 70px;
		}
	</style>
	<style>
		/* Style the navigation bar text when the background is white */
		.navbar {
			background-color: white;
		}

		.navbar .nav-link {
			color: #333;
			/* Set the color to dark (black) */
		}
	</style>


	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CarRentalSystem.Web.styles.css" asp-append-version="true" />
	
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"
		integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ=="
		crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css"
		integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ=="
		crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
	<partial name="_NotificationsPartial" />
	<header>
		<nav class="navbar navbar-expand-lg navbar-light fixed-top">
			<div class="container-fluid px-5 px-ms=d-2" style="margin-left: 2.6rem;">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"
					style="margin-left: 3em;">Car Rental System</a>
				<button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse"
					data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false"
					aria-label="Toggle navigation">
					Menu
					<i class="fas fa-bars"></i>
				</button>

				<div class="collapse navbar-collapse" id="navbarResponsive">
					<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Images" asp-action="Upload">Upload</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Images" asp-action="All">All</a>
						</li>
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>

	<main role="main" class="page-content">
		@RenderBody()
	</main>
	<footer>
		<section class="contact-section bg-black justify-content-between">

			<div class="container-fluid d-flex align-items-center">

				<div class="social d-flex" style="margin-bottom: 3rem; margin-right: 15%;margin-left: 2rem;">

					<a class="media-icons" href="#!"><i class="fab fa-twitter"></i></a>
					<a class="media-icons" href="#!"><i class="fab fa-facebook-f"></i></a>
					<a class="media-icons" href="#!"><i class="fab fa-github"></i></a>
				</div>

				<ul class="footer-nav list-unstyled d-flex mb-0">
					<li class="nav-item">
						<a class="nav-link px-5" aria-current="page" href="#">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link px-5" href="#">Booking</a>
					</li>
					<li class="nav-item">
						<a class="nav-link px-5" href="#">About</a>
					</li>
					<li class="nav-item">
						<a class="nav-link px-5" href="#">Cars</a>
					</li>
					<li class="nav-item">
						<a class="nav-link px-5" href="#">Services</a>
					</li>
					<li class="nav-item">
						<a class="nav-link px-5" href="#">Contact</a>
					</li>
				</ul>

	
			</div>
			<div class="ml-auto"> <!-- Use "ml-auto" class to push the content to the right -->
				<span style="display: block; font-weight: bold; padding-left: 2rem">Car Rental System @ReleaseYear
				@if (DateTime.UtcNow.Year != ReleaseYear)
				{
					@Html.Raw($" - {DateTime.UtcNow.Year}")
				}
				</span>
			</div>

		</section>
	</footer>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/scripts.js"></script>
	<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
