@model CarRentalSystem.Web.ViewModels.Blog.BlogViewModel

<a asp-controller="Blog" asp-action="Detail" asp-route-id="@Model.Id"  class="news-link overflow-hidden">
	<figure class="d-flex">
		@* ReSharper disable once CssNotResolved *@
		<img width="100%" style="aspect-ratio: 1/1;"
		     data-src="@Model.ImageUrl"
		     class="object-fit lazyloaded"
		     src="@Model.ImageUrl"
		     loading="lazy">
	</figure>
	<div class="--body w-90 black-1 h-100">
		<h4 class="mb-15 two-line trans">
			@Model.Title
		</h4>
		<div class="gray-2 font-14 line-28 mb-25 desc three-line">
			@Model.Description
		</div>
		<div class="d-flex gap-40 align-center">
			<p class="d-flex align-center gap-10 text-dark">
				<i class="fa fa-calendar main-color"></i> @Model.CreatedOn.ToString("MMMM dd, yyyy")
			</p>
		</div>
	</div>
</a>
