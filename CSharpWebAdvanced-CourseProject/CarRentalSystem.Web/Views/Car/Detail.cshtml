@model CarDetailsViewModel
@{
    ViewBag.Title = "Car Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img class="card-img-top" style="width: 100%; height: 381px;" src="@Model.ImageUrl" alt="Car Image">
        </div>
        <div class="col-md-6">
            <div class="card border-0">
                <p style="font-size:25px;"><u>@Model.Make</u></p>
                <p>Price Per Day: <b>@($"{Model.PricePerDay:f2}") BGN</b></p>
                <p>Model: <b>@Model.Model</b></p>
                <p>Transmission: <b>@Model.Transmission</b></p>
                <p><i>(@(Model.IsRented ? "Rented" : "Not Rented"))</i></p>

                <div class="d-flex flex-row">
                    @if (this.User.Identity?.IsAuthenticated ?? false)
                    {
                        @if (!Model.IsRented)
                        {
                            <form class="ml-2" asp-controller="Car" asp-action="Rent" asp-route-id="@Model.Id" method="post">
                                <input class="btn btn-primary btn-sm-custom" type="submit" value="Rent" />
                            </form>
                        }
                        else
                        {
                            <form class="ml-2" asp-controller="Car" asp-action="Leave" asp-route-id="@Model.Id" method="post">
                                <input class="btn btn-primary btn-sm-custom" type="submit" value="Leave" />
                            </form>
                        }
                        <a asp-controller="Car" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm-custom ml-2">Edit</a>
                        <a asp-controller="Car" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm-custom ml-2">Delete</a>
                    }
                </div>
                <p></p>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom style for smaller buttons */
    .btn-sm-custom {
	    font-size: 13px;
	    padding: 11px 33px;
    }
    .btn.btn-primary.btn-sm-custom {
	    margin-right: 0.3em;
    }
    .btn.btn-warning.btn-sm-custom.ml-2 {
	    margin-right: 0.4em;
    }
    .d-flex.flex-row {
	    margin-top: 3.2rem;
    }
    u {
	    text-decoration: none;
	    font-size: 42px;
	    color: black;
    }
    p {
	    font-size: 24px;
    }
</style>
