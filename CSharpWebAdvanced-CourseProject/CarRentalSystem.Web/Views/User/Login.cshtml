@model LoginFormModel

<div class="row">
	<div class="col-md-4 offset-md-4">
		<section>
			<form id="account" method="post">
				<h2 class="text-center fw-normal">Use a local account to log in.</h2>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-floating mb-1">
					<input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
					<label asp-for="Email" class="form-label"></label>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-floating mb-1">
					<input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
					<label asp-for="Password" class="form-label"></label>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div>
					<div class="checkbox">
						<label asp-for="RememberMe" class="form-label">
							<input class="form-check-input" asp-for="RememberMe" />
							@Html.DisplayNameFor(m => m.RememberMe)
						</label>
					</div>
				</div>
				<div>
					<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
				</div>
			</form>
		</section>
	</div>
</div>

<style>
	.form-check-input {
		height: 17px;
	}

	.form-check-input {
		margin-top: 5px;
	}
</style>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}