@model ServiceViewModel
@{
	bool isAdmin = this.User.IsInRole(AdminRoleName);
}

<section class="self-drive-section pt-80 pb-50">
	<div class="container container-box">
		<div class="return-button-container">
			<a asp-area="Service" asp-controller="Service" asp-action="All" class="btn btn-primary return-button">
				<i class="fa-solid fa-arrow-rotate-left"></i>
				<span class="tooltip-text">Go Back</span>
			</a>
		</div>
		@if (isAdmin)
		{
			<div class="edit-button-container">
				<a asp-area="Service" asp-controller="Service" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info edit-button">
					<i class="fa-solid fa-pen-to-square"></i>
					<span class="tooltip-text">Edit the service article</span>
				</a>
			</div>
			<div class="delete-button-container">
				<form asp-area="Service" asp-controller="Service" asp-action="Delete" method="post" class="delete-form">
					<input type="hidden" name="id" value="@Model.Id" />
					<button type="submit" class="btn btn-danger delete-button" onclick="return confirm('Are you sure you want to delete: @Model.Title?')">
						<i class="fa-solid fa-trash-can"></i>
						<span class="tooltip-text">Delete the service article</span>
					</button>
				</form>
			</div>
		}
		<div class="box d-flex space-between column-reverse-p align-center">
			<div class="left w-48 w-100-p">
				<h2 class="section-title mb-40">@Model.Title</h2>
				<div class="font-18 mb-20 line-28 black-1 aboutus__page__text">
					<div class="wpb_text_column wpb_content_element ">
						<div class="wpb_wrapper">
							<p>@Model.Text</p>
						</div>
					</div>
					<div class="wpb_text_column wpb_content_element ">
						<div class="wpb_wrapper"></div>
					</div>
				</div>
			</div>
			<div class="right relative d-flex w-48 align-self">
				<img width="100%" data-src="@Model.ImageUrl" class="object-fit ls-is-cached lazyloaded" src="@Model.ImageUrl" loading="lazy">
			</div>
		</div>
		<div class="font-18 mb-50 line-28 black-1 aboutus__page__text"></div>
	</div>
</section>

