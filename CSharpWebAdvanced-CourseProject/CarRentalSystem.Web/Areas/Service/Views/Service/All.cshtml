@model AllServiceViewModel

<h2 class="section-title center mt-4">Providing Amazing Services To Our Clients</h2>
<hr />
<section class="services-boxes pt-80 pb-60">
	<div class="container">
		<div class="add-button-container">
			<a href="@Url.Action("Add", "Service", new { area = "Service" })" class="btn btn-primary add-button">
				<i class="fas fa-plus"></i>
				<span class="tooltip-text">Add new service article</span>
			</a>
		</div>
		<div class="box grid-2 grid-1-t w-80 gap-20 w-100-p m-side-auto">
			@foreach (var service in Model.Services)
			{
				<partial name="_ServiceCardPartial" model="service" />
			}
		</div>
	</div>
</section>

@section Styles {
	<link rel="stylesheet" href="~/css/service.css" asp-append-version="true" />
}

<style>
	.add-button-container {
		position: absolute;
		top: 9em;
		left: 1em;
		padding: 10px;
	}

	.add-button {
		position: relative;
	}

	.tooltip {
		display: inline-block;
		position: relative;
		cursor: pointer;
		transition: transform 0.3s;
	}

	.add-button:hover .tooltip {
		transform: scale(1.2);
	}

	.tooltip-text {
		visibility: hidden;
		opacity: 0;
		position: absolute;
		top: -26px;
		left: 144%;
		transform: translateX(-50%);
		background-color: #333;
		color: #fff;
		padding: 5px 10px;
		border-radius: 4px;
		white-space: nowrap;
		font-size: 11px;
		pointer-events: none;
		transition: opacity 0.3s;
	}

	.add-button:hover .tooltip-text {
		visibility: visible;
		opacity: 1;
	}
</style>
